# Server Configuration
NODE_ENV=development
PORT=3000
API_PREFIX=/api/v1

# Database Configuration
# DB_ENVIRONMENT: 'local' or 'production'
DB_ENVIRONMENT=local
DB_HOST=localhost
DB_PORT=3306
DB_NAME=fmrb_db
DB_USER=root
DB_PASSWORD=

# JWT Configuration
# Generate secure secrets with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_ACCESS_SECRET=your-access-secret-key-min-32-chars-long-please-change-this
JWT_REFRESH_SECRET=your-refresh-secret-key-min-32-chars-long-please-change-this
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
# Options:
# 1. Single origin: CORS_ORIGIN=http://localhost:5173
# 2. Multiple origins (comma-separated): CORS_ORIGIN=http://localhost:5173,http://localhost:3000,https://example.com
# 3. Allow all origins: CORS_ORIGIN=*
CORS_ORIGIN=http://localhost:5173
